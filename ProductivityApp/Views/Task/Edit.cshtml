@model ProductivityApp.Models.UserTask

@{
    ViewBag.Title = "Edit Task ✏️";
}

<h2 class="text-center text-primary mb-4">Edit Task</h2>

<div class="card shadow-sm mx-auto" style="max-width: 600px;">
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(m => m.Id)

            <div class="form-group">
                @Html.LabelFor(m => m.Title, new { @class = "font-weight-bold" })
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Enter Task Title" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Description, new { @class = "font-weight-bold" })
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", placeholder = "Enter Task Description" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.DueDate, new { @class = "font-weight-bold" })
                @Html.TextBoxFor(m => m.DueDate, new { @class = "form-control", type = "date" })
            </div>

            <div class="form-group">
                @Html.CheckBoxFor(m => m.IsComplete)
                @Html.Label("Completed", new { @class = "font-weight-bold" })
            </div>

            <button type="submit" class="btn btn-success btn-block">Update Task ✅</button>
        }
    </div>
</div>

<div class="text-center mt-4">
    <a href="@Url.Action("Index", "Task")" class="btn btn-secondary">Back to Task List ↩️</a>
</div>
