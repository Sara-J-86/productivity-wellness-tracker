@model ProductivityApp.Models.UserTask

@{
    ViewBag.Title = "Delete Task 🗑️";
}

<h2 class="text-center text-danger mb-4">Are you sure you want to delete this task?</h2>

<div class="card shadow-sm mx-auto" style="max-width: 600px;">
    <div class="card-body">
        <p><strong>Task Title:</strong> @Model.Title</p>
        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>Due Date:</strong> @Model.DueDate</p>

        <div class="form-group">
            <form method="post">
                @Html.HiddenFor(m => m.Id)
                <button type="submit" class="btn btn-danger btn-block">Yes, Delete Task 🗑️</button>
            </form>
        </div>

        <div class="text-center mt-4">
            <a href="@Url.Action("Index", "Task")" class="btn btn-secondary">Cancel ↩️</a>
        </div>
    </div>
</div>
