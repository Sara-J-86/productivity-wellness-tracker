@model ProductivityApp.Models.Mood

@{
    ViewBag.Title = "Edit Mood";
}

<h2>Edit Mood</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.MoodDate)
        @Html.TextBoxFor(model => model.MoodDate, new { @class = "form-control", type = "date" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MoodValue)
        @Html.DropDownListFor(model => model.MoodValue, new SelectList(
            new[] {
                new { Value = 1, Text = "😞 Very Bad" },
                new { Value = 2, Text = "😕 Bad" },
                new { Value = 3, Text = "😐 Neutral" },
                new { Value = 4, Text = "😊 Good" },
                new { Value = 5, Text = "😄 Very Good" }
            }, "Value", "Text"), "Select Mood", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Update Mood</button>
    <a href="@Url.Action("Index", "Mood")" class="btn btn-secondary">Cancel</a>
}

<br />

<a href="@Url.Action("Index", "Mood")" class="btn btn-outline-info">
    ← Back to Mood List
</a>
